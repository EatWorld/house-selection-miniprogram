/* Ê•ºÊ†ãÁΩëÊ†º */
.buildings-grid {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.building-card {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 32rpx;
}

.building-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.building-card:active {
  transform: translateY(-2rpx) scale(0.98);
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.12), 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  background: rgba(255, 255, 255, 0.98);
}

.building-card:active::before {
  opacity: 1;
}

.building-icon {
  width: 140rpx;
  height: 140rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 52rpx;
  color: white;
  flex-shrink: 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15), 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.building-icon::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255,255,255,0.3) 0%, rgba(255,255,255,0.1) 50%, transparent 100%);
  border-radius: 24rpx;
  opacity: 0.8;
}

.building-card:active .building-icon {
  transform: scale(0.95);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.2), 0 1rpx 6rpx rgba(0, 0, 0, 0.15);
}

.building-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  align-items: center;
  justify-content: center;
}

.building-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin: 0;
  letter-spacing: -0.5rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', sans-serif;
}

.building-details {
  background: rgba(52, 199, 89, 0.9);
  backdrop-filter: blur(10rpx);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(52, 199, 89, 0.25);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Text', sans-serif;
}

.view-floorplan {
  font-size: 22rpx;
  color: #007AFF;
  font-weight: 600;
  flex-shrink: 0;
  min-width: 120rpx;
  text-align: center;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-radius: 16rpx;
  border: 2rpx solid rgba(0, 122, 255, 0.2);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.view-floorplan::before {
  content: 'üëÅ';
  margin-right: 4rpx;
  font-size: 22rpx;
}

.view-floorplan::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 122, 255, 0.05);
  border-radius: 20rpx;
  opacity: 0;
  transition: opacity 0.2s ease;
}

.building-card:active .view-floorplan {
  background: rgba(0, 122, 255, 0.15);
  color: #005BB5;
  transform: scale(0.96);
  border-color: rgba(0, 122, 255, 0.25);
}

.building-card:active .view-floorplan::after {
  opacity: 1;
}

